# VitalFlow AI - Backend Environment Configuration
# Copy this file to .env.backend and update values
# This file is for the backend services (Rajat & Dhanshree's components)

# ============================================
# SERVER CONFIGURATION
# ============================================

# Server host and port
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Secret key for JWT tokens (generate a secure random string)
SECRET_KEY=your-super-secret-key-change-in-production

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# ============================================
# DATABASE CONFIGURATION
# ============================================

# Database URL (PostgreSQL recommended for production)
# SQLite for development: sqlite:///./vitalflow.db
# PostgreSQL: postgresql://user:password@localhost:5432/vitalflow
DATABASE_URL=sqlite:///./vitalflow.db

# Redis URL (for caching and real-time features)
REDIS_URL=redis://localhost:6379/0

# ============================================
# AI SERVICES CONFIGURATION (Dhanshree)
# ============================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# Google Gemini Configuration (alternative)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro

# ElevenLabs Voice Configuration
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=your-voice-id

# ============================================
# COMPUTER VISION CONFIGURATION (Dhanshree)
# ============================================

# OpenCV Camera Settings
CV_CAMERA_INDEX=0
CV_FRAME_WIDTH=640
CV_FRAME_HEIGHT=480
CV_FPS=30

# Bed Detection Model Path
CV_MODEL_PATH=./models/bed_detector.pt

# ============================================
# CORE LOGIC CONFIGURATION (Rajat)
# ============================================

# Triage Engine Settings
TRIAGE_CRITICAL_SPO2_THRESHOLD=90
TRIAGE_SERIOUS_SPO2_THRESHOLD=94
TRIAGE_CRITICAL_HR_LOW=50
TRIAGE_CRITICAL_HR_HIGH=120

# Staff Management
STAFF_FATIGUE_WARNING_THRESHOLD=70
STAFF_FATIGUE_CRITICAL_THRESHOLD=90
STAFF_MAX_SHIFT_HOURS=12

# Bed Management
BED_SWAP_COOLDOWN_MINUTES=30
ICU_CRITICAL_CAPACITY_PERCENT=90

# ============================================
# SIMULATION CONFIGURATION (Mehetab)
# ============================================

# Simulation Settings
SIMULATION_ENABLED=true
SIMULATION_SPEED=1.0
SIMULATION_VITALS_UPDATE_INTERVAL=5

# Ambulance Simulation
AMBULANCE_SPEED_KMH=40
AMBULANCE_COUNT=5

# ============================================
# WEBSOCKET CONFIGURATION
# ============================================

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# ============================================
# LOGGING CONFIGURATION
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (leave empty for console only)
LOG_FILE=./logs/vitalflow.log

# ============================================
# RATE LIMITING
# ============================================

# API rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=100

# ============================================
# EXTERNAL INTEGRATIONS
# ============================================

# Hospital Information System (HIS) Integration
HIS_API_URL=
HIS_API_KEY=

# Emergency Services API
EMERGENCY_API_URL=
EMERGENCY_API_KEY=

# SMS/Notification Service
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# VitalFlow AI - Frontend Environment Configuration
# Copy this file to .env and update values
# This file is for the frontend dashboards (Sayali & Aditya's components)

# ============================================
# BACKEND API CONFIGURATION
# ============================================

# Backend API base URL (REST endpoints)
VITALFLOW_API_URL=http://localhost:8000/api

# Backend WebSocket URL (real-time updates)
VITALFLOW_WS_URL=ws://localhost:8000/ws

# API authentication key (if required)
VITALFLOW_API_KEY=

# ============================================
# DATA SOURCE CONFIGURATION
# ============================================

# Data source mode: mock, api, or json
# - mock: Use generated fake data (default for development)
# - api: Use real backend API
# - json: Use shared JSON state file
VITALFLOW_DATA_SOURCE=mock

# ============================================
# STREAMLIT CONFIGURATION
# ============================================

# Auto-refresh interval in seconds
AUTO_REFRESH_INTERVAL=5

# Debug mode (shows additional logging)
DEBUG=false

# Theme: light or dark
THEME=dark

# ============================================
# GOOGLE OAUTH CONFIGURATION (Optional)
# ============================================
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8501/callback

# ============================================
# AI SERVICES CONFIGURATION
# ============================================
# OpenAI API Key (for medicine AI recommendations)
OPENAI_API_KEY=

# Google Gemini API Key (alternative to OpenAI)
GEMINI_API_KEY=

# ElevenLabs API Key (for voice alerts)
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_AI_DECISIONS=true
ENABLE_VOICE_ALERTS=true
ENABLE_CV_DETECTION=false
ENABLE_MOCK_DATA=true
